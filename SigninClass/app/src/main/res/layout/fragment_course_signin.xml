<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.courseSignin.CourseSigninFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程名称"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程码："
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/course_code_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/course_code"/>
            <TextView
                android:id="@+id/course_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="130"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/course_code_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人参加"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/course_number"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/course_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地点："
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/course_position_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入上课地点"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/course_position"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <View
                android:id="@+id/start_divide"
                android:background="@color/grey"
                android:alpha="0.3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/start_signin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始签到时间："
                android:textSize="20dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/start_divide"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/start_signin_time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:25:00"
                android:textSize="20dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/start_signin_time"
                app:layout_constraintStart_toEndOf="@+id/start_signin_time"/>
            <TextView
                android:id="@+id/end_signin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到持续时间："
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/start_signin_time"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/signin_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择签到持续时间"
                android:textSize="20dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/end_signin_time"
                app:layout_constraintStart_toEndOf="@+id/end_signin_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toTopOf="@+id/signin_duration"
                app:layout_constraintStart_toEndOf="@+id/signin_duration"/>
            <View
                android:id="@+id/end_divide"
                android:background="@color/grey"
                android:alpha="0.3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/end_signin_time"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入6位签到码发起签到："
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/course_code_background"
                android:id="@+id/signin_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOCIAL"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="8dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="发起签到"
                android:textSize="20dp"
                android:padding="16dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>